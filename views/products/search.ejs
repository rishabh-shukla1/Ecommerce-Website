<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar', { query: query || '' }) %> <!-- Pass query to navbar -->

<!-- Search Results Section -->
<div class="row">
    <%- include('../partials/flash') %>

    <% if (products.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% products.forEach(product => { %>
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <img src="<%= product.img %>" class="card-img-top" alt="<%= product.name %>" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" style="max-width: 250px;"><%= product.name %></h5>
                            <p class="card-text text-muted text-truncate" style="max-width: 250px;"><%= product.desc %></p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">&#8377; <%= product.price %></h5>
                                <a href="/products/<%= product._id %>" class="btn btn-outline-success btn-sm">View Product</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="text-center text-muted">No products found for "<%= query %>".</p>
    <% } %>
</div>
